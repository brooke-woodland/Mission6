@{
    ViewData["Title"] = "Submit A Movie";
}
@model Mission6.Models.SubmitMovie

<h1> Submit a Movie</h1>
<!--method= post calls the HttpPost IActionResult-->
<form method="post">
    <input asp-for="MovieID" type="hidden"/>
    <label>Title:</label>
    <!--asp-for connects to the variables in the SubmitMovie model-->
    <input asp-for="Title" type="text" required />
    <br />
    <label>Director:</label>
    <input asp-for="Director" type="text" required />
    <br />
    <label>Year:</label>
    <input asp-for="ReleaseYear" type="text" required />
    <br />
    <label>Category:</label>
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
    </select>
    <br />
    <label>Rating:</label>
    <select asp-for="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label>Edited</label>
    <select asp-for="Edited">
        <option value=true>Yes</option>
        <option value=false>No</option>
    </select>
    <br />
    <label>Notes:</label>
    <textarea asp-for="Notes" maxlength=25></textarea>
    <br />
    <label>Lent to:</label>
    <input asp-for="LentTo" type="text" />
    <br />
    <!--submit calls the post method-->
    <button type="submit"> Submit Movie</button>
</form>
<br /><br />
<div asp-validation-summary="All"></div>